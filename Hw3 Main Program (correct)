// The following program performs addition and subtraction of fractions and
// reduces them to the simplest form.
//******************************************************************************

#include <iostream>
#include <sstream>
#include "hw3functions.h"
using namespace std;

int main(){
    char user = '\0';
    while (true){
        ShowMenu();
        cin >> user;
        cin.ignore();
        int c = 0;
        if ((user == 'A')||(user=='a')){
            add();
        }
        else if((user == 'S')||(user=='s')){
            subtract();
        }
        else if((user == 'Q')||(user == 'q')){
            cout << "Thank you, exiting program\n";
            break;
        }
        else{
            cout<< "Invalid Entry \n";
            break;
        }
        
    }
    return 0;
}
